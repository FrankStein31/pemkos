<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_item_list"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">


    <RelativeLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/iv_placeholder"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_bill"
            app:tint="@color/textHint"
            android:padding="16dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_photo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:shapeAppearanceOverlay="@style/circleImageView"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="The Barber Corner"
                android:maxLines="1"
                android:visibility="gone"
                android:layout_margin="0dp"
                android:textStyle="bold"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Barber Corner"
                android:maxLines="1"
                android:textSize="12sp"
                android:textColor="@color/text"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Barber Corner The Barber Corner The Barber Corner The Barber Corner The Barber Corner The Barber Corner The Barber Corner The Barber Corner "
            android:maxLines="1"
            android:layout_margin="0dp"
            android:textColor="@color/textHint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Barber Corner"
                android:maxLines="2"
                android:textColor="@color/textHint"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="The Barber Corner"
                android:maxLines="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/teal_700"/>

            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_chat"
                app:tint="@color/primary"
                android:visibility="gone"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>